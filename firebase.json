{
    "functions": {
        "source": "firebase-functions",
        "runtime": "nodejs20"
    },
    "hosting": [
        {
            "site": "dsgt-portal",
            "public": "sites/portal/public",
            "cleanUrls": true,
            "rewrites": [
                {
                    "source": "**",
                    "function": "portal"
                }
            ]
        },
        {
            "site": "dsgt-website",
            "public": "sites/mainweb/out",
            "cleanUrls": true,
            "trailingSlash": true
        }
    ]
}